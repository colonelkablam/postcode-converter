<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postcode Info</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>
    <div class="main-container">
        <div class="wrapper">
            <h1>UK Postcode Lookup</h1>
            <div class="form-container">
                <form action="/get-single-info" method="POST">
                    <label for="postcode">Enter Postcode</label>
                    <div class="input-group">
                        <input type="text" id="postcode" name="postcode" placeholder="e.g., A12 3BC" required>
                        <button type="submit">Lookup</button>
                    </div>
                </form>
            </div>
            <div class="info-box">
                <% if (!locals.error) { %> 
                <h3>Postcode Information<%= locals.locationData?.postcode ? ' for ' + locals.locationData.postcode : '' %></h3>
                <div class="info-grid">
                    <p><span>Longitude:</span> <%= locals.locationData?.longitude || 'N/A' %></p>
                    <p><span>Latitude:</span> <%= locals.locationData?.latitude || 'N/A' %></p>
                    <p><span>Eastings:</span> <%= locals.locationData?.eastings || 'N/A' %></p>
                    <p><span>Northings:</span> <%= locals.locationData?.northings || 'N/A' %></p>
                    <p><span>Country:</span> <%= locals.locationData?.country || 'N/A' %></p>
                    <p><span>Region:</span> <%= locals.locationData?.region || 'N/A' %></p>
                    <p><span>Admin District:</span> <%= locals.locationData?.admin_district || 'N/A' %></p>
                    <p><span>Admin Ward:</span> <%= locals.locationData?.admin_ward || 'N/A' %></p>
                    <p class="full-width">
                        <span>Parliamentary Constituency 2024:</span>
                        <%= locals.locationData?.parliamentary_constituency_2024 || 'N/A' %>
                    </p>
                </div>
                <% } else { %>
                    <h3>Unable to retrieve data</h3>
                    <div class="info-grid">
                        <p><span>Message:</span> <%= locals.error || 'N/A' %></p>                  
                    </div>
                <% } %>

            </div>
        </div>
        <div id="map"></div>
    </div>
    <script>
        const locationData = <%- JSON.stringify(locals.locationData || {}) %>;

        // Initialize the map
        const map = L.map('map').setView([54.56, -2.37], 5); // Default view

        // Add OpenStreetMap tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // If locationData has longitude and latitude, update the map
        if (locationData.longitude && locationData.latitude) {
            map.setView([locationData.latitude, locationData.longitude], 14);

            // Add a marker
            L.marker([locationData.latitude, locationData.longitude])
                .addTo(map)
                .bindPopup(`<b>${locationData.postcode || 'Unknown Postcode'}</b>`)
                .openPopup();
        }
    </script>
</body>
</html>
